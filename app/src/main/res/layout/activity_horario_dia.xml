<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/azulBajo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Horario_dia">

    <TextView
        android:id="@+id/horario_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diaActividad1"
        android:textStyle="bold"
        android:textColor="@color/azulFuerte"
        android:textSize="30sp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="61dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Actividad1.1"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/azulFuerte"
        android:layout_marginStart="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="61dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Actividad1"
        android:textSize="20sp"
        android:textColor="@color/colorLetra"
        android:layout_marginStart="49dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="61dp"/>

    <ImageView
        android:layout_width="374dp"
        android:layout_height="200dp"
        android:src="@drawable/hab"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

    <ImageView
        android:layout_width="374dp"
        android:layout_height="200dp"
        android:src="@drawable/bos"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

    <Button
        android:id="@+id/descargarMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descargar"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/azulFuerte"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

</LinearLayout>