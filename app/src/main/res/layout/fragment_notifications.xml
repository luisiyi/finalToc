<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulBajo"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/materia_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material_extra"
        android:textStyle="bold"
        android:textColor="@color/azulFuerte"
        android:textSize="40sp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="113dp"
        />

    <Button
        android:id="@+id/botonarte"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="49dp"
        android:backgroundTint="@color/azulFuerte"
        android:text="@string/arte"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/botonocio"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="49dp"
        android:backgroundTint="@color/azulFuerte"
        android:text="@string/ocio"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/botonlectura"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="49dp"
        android:backgroundTint="@color/azulFuerte"
        android:text="@string/lectura"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/botonfisico"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="49dp"
        android:backgroundTint="@color/azulFuerte"
        android:text="@string/fisico"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="25sp" />

</LinearLayout>